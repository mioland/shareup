<div class="main">
  <div class="form-group text-center">
    <h1 class="form-sub-color">ShareUpユーザー登録</h1>
  </div>
    <div class="container">
      <div class="form-wrap">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :user_name, autofocus: true, placeholder: "ユーザー名", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <br>

      </div>
      <div class="form-wrap">
        <p class="text-center">
          アカウントをお持ちですか？
          <%= link_to "ログインする", new_user_session_path%>
        </p>
      </div>
    </div>
</div> 