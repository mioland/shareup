<div class="container">  
  <div class="row">
    <div class="col-md-8 offset-md-2 user-wrapper">
      <div class="text-center">
        <div class="post-new-edit-title">新規投稿</div>
      </div>
      <%= form_for(@post) do |f| %>
        <div class="form-group">
          <%= f.label :title, 'タイトル', class: 'post-new-edit-label' %>
          <%= f.text_field :title, class: 'form-control', placeholder: '50文字以内。', id: 'post-count' %>
        </div>
        <div class='field'>
          <%= f.label :tag_list, 'タグ', class: 'post-new-edit-label' %><br/>
          <%= f.text_field :tag_list, class: 'form-control', placeholder: '半角スペース区切り。' %>
        </div>
        <div class="form-group">
            <%= file_field_tag "images[]", type: :file, multiple: false %>
        </div>    
        <div class="form-group">
          <%= f.label :content, '', class: 'post-new-edit-label' %>
          <%= f.text_area :content, class: 'form-control', rows: "7", placeholder: '' %>
        </div>     
        <%= f.submit '投稿', class: 'btn btn-outline-primary btn-block mt-4' %>
      <% end %>
    </div>
  </div>
</div>